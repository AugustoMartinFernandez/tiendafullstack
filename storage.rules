rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regla para comprobantes de pago
    match /receipts/{userId}/{orderId}/{fileName} {
      // Solo el due침o o el admin pueden leer
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
      // Solo el due침o puede subir, m치x 5MB, solo im치genes o PDF
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf');
    }
  }
}