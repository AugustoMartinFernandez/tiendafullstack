rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Productos: Lectura pública, Escritura solo Admin (vía SDK, reglas ignoradas por Admin SDK pero buenas por defecto)
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Comprobantes: Solo el usuario dueño puede subir a su carpeta o con su prefijo
    // Estructura: receipts/{orderId}/{userId}_{ts}_{name}
    match /receipts/{orderId}/{fileName} {
      allow read: if request.auth != null && fileName.matches(request.auth.uid + '_.*');
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '_.*') && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
  }
}
