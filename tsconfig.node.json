{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
